{
    "name": "@three.rays/primitives",
    "version": "1.0.0",
    "description": "A Path Tracing Renderer for Three.js backed by AssemblyScript and WebAssembly",
    "main": "src/index.ts",
    "repository": "git@github.com:01alchemist/three.rays.git",
    "author": "Nidin Vinayakan <01@01alchemist.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "start": "node --experimental-wasm-threads --experimental-worker ./src/node/index.js",
        "debug": "node --inspect-brk --experimental-wasm-threads --experimental-worker ./src/node/index.js",
        
        "compile": "../../scripts/compile.js",
        "asbuild:untouched": "yarn compile src/**/*.ts -o build/untouched.wasm --debug",
        "asbuild:optimized": "yarn compile src/**/*.ts -o build/optimized.wasm --optimize",
        "build2": "npm run asbuild:untouched && npm run asbuild:optimized",
        "build": "echo skipped!",

        "watch": "nodemon --exec 'yarn asbuild:untouched' src/**/*.ts"
    },
    "devDependencies": {
        "assemblyscript": "AssemblyScript/assemblyscript"
    }
}
